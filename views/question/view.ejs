<div>
  <h1><%= q['title'] %></h1>
  <div><%= q['text'] %></div>
  <p class="q-author">Author: <%= q['author']['username'] %></p>

  <h3>Answers</h3>

  <ul class="list-unstyled">
    <% q['answers'].forEach(function(a){ %>
    <li class="q-item">
      <p><%= a['text'] %></p>
      <p class="q-author">Author: <%= a['author']['username'] %></p>
    </li>
    <% }) %>
  </ul>

</div>

<div class="answer-form">
  <form action="/post-answer" method="post">
    <input type="hidden" name="questionId" value="<%= q['id'] %>"/>
    <div class="form-group required">
      <label for="text">Your answer</label>
      <textarea class="form-control" id="text" name="text" placeholder="Type your answer here..." required></textarea>
    </div>

    <div class="form-group required">
      <label for="username">Your username</label>
      <input class="form-control" id="username" name="username" value="" required/>
    </div>

    <button type="submit" class="btn btn-primary">Post your answer</button>
  </form>
</div>
