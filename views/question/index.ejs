<h1>Latest questions</h1>
<table class="table">
  <% questions.forEach(function(q){ %>
  <tr>
    <td><a href="/questions/<%= q['id'] %>"><%= q['title'] %></a></td>
  </tr>
  <% }) %>
</table>


<div>
  <form action="/post-question" method="post">
    <div class="form-group">
      <label for="title">Question title</label>
      <input id="title" name="title" value=""/>
    </div>

    <div class="form-group">
      <textarea name="text" placeholder="Type your question here..."></textarea>
    </div>

    <div class="form-group">
      <label for="username">Your username</label>
      <input id="username" name="username" value=""/>
    </div>

    <button type="submit" class="btn btn-primary">Post your question</button>
  </form>
</div>
